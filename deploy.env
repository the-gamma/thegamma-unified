# Public URL of the deployed service — update once Hostim URL / custom domain is known
THEGAMMA_BASE_URL=https://services.thegamma.net

# Volume mount point — must match path configured in Hostim dashboard
THEGAMMA_STORAGE_ROOT=/data/storage

# Google reCAPTCHA secret for gallery submission; leave empty to skip verification
RECAPTCHA_SECRET=

# Port Kestrel listens on inside the container (don't change)
ASPNETCORE_URLS=http://+:8080
